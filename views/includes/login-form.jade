p.fb-login
  a(href="/auth/facebook") FB
p.tw-login
  a(href="/auth/twitter") TW
.login-thumb.b Use your email address

form.login.form-horizontal(action="/users/session", method="post")

  if message.length
    p.error= message

  .control-group
    label.control-label(for='email') Email
    .controls
      input#email(type='text', name="email", placeholder='Email')

  .control-group
    label.control-label(for='password') Password
    .controls
      input#password(type='password', name="password", placeholder='Password')

  .form-actions
    button.btn.btn-primary(type='submit') Login
    &nbsp;
    | or&nbsp;
    a.show-signup(href="/signup") sign up