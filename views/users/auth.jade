extends ../layout

block main
  h1= title

block content
  .row
    div
      a(href="/auth/facebook") facebook
    div
      a(href="/auth/twitter") twitter
    .span6
      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li= error.type

      block auth
